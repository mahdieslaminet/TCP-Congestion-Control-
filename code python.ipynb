import matplotlib.pyplot as plt
‌
class TCPSimulator:
def init(self, iterations=100, threshold=32):
self.iterations = iterations
self.cwnd = 1  # پنجره شروع (Slow Start)
self.ssthresh = threshold
self.history = []
self.mode = "Slow Start"
‌
def simulate(self):
for i in range(self.iterations):
self.history.append(self.cwnd)
‌
# منطق الگوریتم TCP Tahoe/Reno
if self.cwnd < self.ssthresh:
self.mode = "Slow Start"
self.cwnd = 2
else:
self.mode = "Congestion Avoidance"
self.cwnd += 1
‌
# شبیه‌سازی رخ دادن ازدحام (به صورت تصادفی یا در گام‌های خاص)
if i == 25 or i == 60:
print(f"Congestion Detected at iteration {i}!")
self.ssthresh = self.cwnd // 2
self.cwnd = 1 # بازگشت به شروع آهسته
‌
def plot_results(self):
plt.figure(figsize=(12, 6))
plt.step(range(len(self.history)), self.history, where='post', color='b', linewidth=2)
plt.title("TCP Congestion Window (cwnd) Simulation")
plt.xlabel("Time (RTT)")
plt.ylabel("Window Size (packets)")
plt.grid(True)
plt.axhline(y=self.ssthresh, color='r', linestyle='--', label='Final ssthresh')
plt.legend()
plt.show()
‌
اجرای شبیه‌سازی
sim = TCPSimulator(iterations=80)
sim.simulate()
sim.plot_results()
